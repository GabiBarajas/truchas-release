#!/bin/bash

# CMake generates this file 
# Replaces each @VAR@ with value of ${VAR}


# Useful environment variables
export CC=@CMAKE_C_COMPILER@
export CXX=@CMAKE_CXX_COMPILER@
export CFLAGS='@hypre_cflags@'
export LDFLAGS='@hypre_ldflags@'


cd @hypre_source_dir@/src
./configure --prefix=@hypre_install_dir@ \
            --without-fei \
            --disable-fortran \
            @TruchasExternal_SHARED_SWITCH@ \
            @hypre_mpi_opt@ \
	    @hypre_blas_opt@ \
	    @hypre_lapack_opt@ 

exit $?
