#!/bin/bash

# CMake generates this file 
# Replaces each @VAR@ with value of ${VAR}


# Useful environment variables
export CC=icc
export CXX=""
export FC=ifort
export CFLAGS='-O -DNDEBUG'
export CPPFLAGS='@netcdf_cppflags@'
export FCFLAGS='@netcdf_fcflags@'
export LDFLAGS='@netcdf_ldflags@'


cd @netcdf_source_dir@
./configure --prefix=@netcdf_install_dir@ \
            --disable-shared  \
	    --disable-dap \
	    --disable-netcdf-4  \
	    --disable-cxx \
	    --with-pic

exit $?
