# --- Order data by global id
def remap_data(data,map):
  if data.ndim > 1:
    (n,dim)=data.shape
  else:
    dim=1
    (n,)=data.shape
  ordered=numpy.empty(data.shape,data.dtype)  
  if data.ndim > 1:
    for i in range(n):
      gid=map[i]-1
      ordered[gid,:]=data[i,:]
  else:
    for i in range(n):
      gid=map[i]-1
      ordered[gid]=data[i]
  return ordered    


